    <style>
      .overlay {
   
   height: 100%;
   width: 0;
   position: fixed; 
   z-index: 1; 
   left: 0;
   top: 0;
   background-color: rgb(0,0,0); 
   background-color: rgba(0,0,0, 0.9); 
   overflow-x: hidden; 
   transition: 0.5s; 
 }
 
 
 .overlay-content {
   position: relative;
   top: 25%; 
   width: 100%; 
   text-align: center; 
   margin-top: 30px; 
 }

 .overlay a {
   padding: 8px;
   text-decoration: none;
   font-size: 36px;
   color: #818181;
   display: block; 
   transition: 0.3s; 
 }
 

 .overlay a:hover, .overlay a:focus {
   color: #f1f1f1;
 }

 .overlay .closebtn {
   position: absolute;
   top: 20px;
   right: 45px;
   font-size: 60px;
 }
 
 
 @media screen and (max-height: 450px) {
   .overlay a {font-size: 20px}
   .overlay .closebtn {
     font-size: 40px;
     top: 15px;
     right: 35px;
   }
 }
body {


  font-family: Arial, Helvetica, sans-serif;
}

@keyframes backgroundScroll {
  from {
    background-position: 0 0; /* Start at top-left */
  }
  to {
    background-position: -400px 0; /* Move 400px to the left */
  }
}

@keyframes burst {
    0% {
        transform: translate(-50%, -50%) scale(0);
        opacity: 1;
    }
    70% {
        opacity: 0.8;
    }
    100% {
        transform: translate(-50%, -50%) scale(1.5);
        opacity: 0;
    }
}
.masked-title {
    font-size: 8rem;
    font-weight: bold;
    color: transparent;
    background-image: url('https://www.mrlocalhistory.org/wp-content/uploads/2019/04/Charter_Day_Ariel.jpg'); 
    background-size: 200%; /* Enlarged for smooth animation */
    background-position: 0 50%;
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: animate-background 5s infinite alternate linear;
}

@keyframes animate-background {
    0% {
        background-position: 0 50%;
    }
    100% {
        background-position: 100% 50%;
    }
}

.section {
    scroll-snap-align: start; 
}

